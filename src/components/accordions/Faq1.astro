  .plus.rotate {
    transform: rotate(135deg);
    transition: transform 0.5s ease;
  }

  .answer {
    text-align: left;
    opacity: 0;
    max-height: 0;
    overflow: hidden;
    transform: translate(0, -30%);
    transition: all 0.5s ease;
  }

  .answer.open {
    opacity: 1;
    max-height: 200px;
    transform: translate(0);
    transform-origin: 50% 50% 0;
  }
</style>

<script>
  const faqItems = document.querySelectorAll('.faq-item');

  function toggleFaq(clickedItem) {
    const clickedPlus = clickedItem.querySelector('.plus');
    const clickedAnswer = clickedItem.querySelector('.answer');
    faqItems.forEach((item) => {
      if (item !== clickedItem) {
        item.querySelector('.plus')?.classList.remove('rotate');
        item.querySelector('.answer')?.classList.remove('open');
      }
    });

    clickedPlus.classList.toggle('rotate');
    clickedAnswer.classList.toggle('open');
  }

  faqItems.forEach((item) => {
    item.addEventListener('click', () => toggleFaq(item));
  });
</script>
