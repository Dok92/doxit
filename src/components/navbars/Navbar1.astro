<style>
  nav {
    position: relative;
    top: 0;
    left: 0;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .nav-wrapper {
    width: 100%;
    max-width: 1630px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px 20px;
    z-index: 1000;
  }

  .menu-box {
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 51px;
    height: 50px;
  }

  .menu-line-box {
    display: flex;
    flex-direction: column;
    gap: 6px;
    cursor: pointer;
    justify-content: center;
    align-items: center;
    width: 45px;
    padding-top: 20px;
    padding-bottom: 20px;
  }

  .menu-line {
    width: 100%;
    height: 2px;
    background-color: #fff;
    transition: transform 0.5s ease-out;
  }

  .menu-line-box.open .line1 {
    transform: translateY(4px) rotate(45deg);
  }

  .menu-line-box.open .line2 {
    transform: translateY(-4px) rotate(-45deg);
  }

  .menu {
    z-index: 99;
    background-color: white;
    transform-origin: 100% 0;
    transform-style: preserve-3d;
    scale: 0.7;
    border-radius: 10px;
    justify-content: flex-end;
    align-items: stretch;
    width: 100%;
    max-width: 450px;
    max-height: 0;
    display: none;
    position: absolute;
    top: 80px;
    right: 15px;
    overflow: hidden;
    box-shadow: 0 20px 40px #0003;
    -webkit-transition: all 0.2s ease-out;
    -moz-transition: all 0.2s ease-out;
    transition: all 0.2s ease-out;
  }

  .menu.open {
    display: flex;
    max-height: 500px;
    scale: 1;
  }

  .menu-content {
    background-color: white;
    border: 1px solid #ffffff59;
    align-items: stretch;
    width: 100%;
    padding: 44px 20px 50px;
    opacity: 0;
    transition: all 0.2s ease-out;
  }

  .menu.open .menu-content {
    opacity: 1;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 30px;
    width: 100%;
    padding: 50px 40px;
  }

  .content-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .content-nav ul li a {
    text-decoration: none;
    color: rgb(71, 71, 71);
    font-size: 32px;
    font-weight: 500;
  }

  .content-nav ul li a:hover {
    text-decoration: underline;
    text-underline-offset: 5px;
    text-decoration-thickness: 2px;
  }

  .content-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30px 0;
    border-bottom: 1px solid #0003;
  }

  .content-info img {
    width: 70px;
    height: 70px;
  }

  .credits {
  }
  .credits p {
    margin: 0;
    font-size: 16px;
    color: rgb(0, 0, 0);
  }

  .credits p:not(:last-child) {
    margin-bottom: 10px;
  }

  .credits a {
    text-decoration: none;
    color: rgb(24, 24, 24);
    font-weight: 600;
  }

  .content-social {
    display: flex;
    grid-column-gap: 30px;
    grid-row-gap: 30px;
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  .content-social a {
    text-decoration: none;
    color: rgb(24, 24, 24);
    font-size: 18px;
    font-weight: 500;
  }

  .content-social a:hover {
    text-decoration: underline;
    text-underline-offset: 5px;
  }

  .content-social .divider {
    background-color: black;
    width: 1px;
    height: 20px;
  }

  @media (max-width: 600px) {
    .nav-wrapper {
      padding: 20px 10px;
    }

    .menu {
      top: 70px;
      right: 16px;
      max-width: 90%;
    }

    .content {
      padding: 30px 20px;
      gap: 20px;
    }

    .content-nav ul li a {
      font-size: 24px;
    }

    .content-social {
      gap: 20px;
    }

    .content-social a {
      font-size: 16px;
    }
  }

  @media (max-width: 321px) {
    .content-social {
      gap: 10px;
    }
  }
</style>

<script>
  // @ts-nocheck

  const menuBox = document.querySelector('.menu-box');
  const menuLineBox = document.querySelector('.menu-line-box');
  const menu = document.querySelector('.menu');
  const nav = document.querySelector('nav');

  function openMenu() {
    menu.style.display = 'flex';

    setTimeout(() => {
      menu.classList.add('open');
      menuLineBox?.classList.add('open');
    }, 10);
  }

  function closeMenu() {
    menu.classList.remove('open');
    menuLineBox?.classList.remove('open');

    setTimeout(() => {
      menu.style.display = 'none';
    }, 200);
  }

  if (menuBox) {
    menuBox.addEventListener('click', (e) => {
      e.stopPropagation();
      if (menu.classList.contains('open')) {
        closeMenu();
      } else {
        openMenu();
      }
    });
  }

  document.addEventListener('click', (e) => {
    if (!nav.contains(e.target)) {
      if (menu.classList.contains('open')) {
        closeMenu();
      }
    }
  });
</script>
