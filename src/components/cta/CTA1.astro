---
import { t } from 'i18next';
---

<a href=''><div class='img-wrapper'><img src='/img/icons/rent-van-icon.webp' alt='' /></div>{t('cta')}</a>
<style>
  a {
    width: max-content;
    display: flex;
    align-items: center;
    gap: -6px;
    background-color: var(--primary);
    color: rgb(0, 0, 0);
    padding: 0 24px;
    border-radius: var(--rounded-full);
    text-decoration: none;
    font-weight: 500;
    transition: box-shadow 0.6s ease;
  }

  a:hover {
    box-shadow: var(--primary-400) 0px 20px 30px -10px;
  }

  .img-wrapper {
    display: flex;
    align-items: flex-end;
    height: 48px;
  }

  img {
    width: 76px;
    height: auto;
  }
</style>
