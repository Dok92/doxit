---
const { items = [], className = "" } = Astro.props;
---

<div class={`grid ${className}`}>
  {items.map((item: { name: string; content: string; }) => (
    <div class="grid-item">
      <h3>{item.name}</h3>
      {item.content && <p>{item.content}</p>}
    </div>
  ))}
</div>

<style>
.grid {
  display: grid;
  gap: 1rem;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  align-items: start;
  justify-items: center; 
}

.grid-item {
  background-color: var(--bg-color, #f4f4f4);
  border: 1px solid var(--border-color, #ddd);
  border-radius: 8px;
  padding: 1rem;
  text-align: center;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

/* NOTE Grid classes are examples, should be modified to fit specific project  */
  
.grid-tight {
  gap: 0.5rem;
}

.grid-loose {
  gap: 2rem;
}

.grid-center {
  align-items: center;
  justify-items: center;
}

.grid-item-wide {
  grid-column: span 2;
}

</style>